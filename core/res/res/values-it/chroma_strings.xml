<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <!-- Title of dialog to confirm rebooting. -->
    <string name="reboot_title">Riavvio</string>
    
    <!-- Reboot menu -->
    <string name="reboot_reboot">Riavvio</string>
    <string name="reboot_recovery">Recovery</string>
    <string name="reboot_bootloader">Bootloader</string>
    <string name="reboot_soft">Riavvio veloce</string>

    <!-- Reboot Progress Dialog. This is shown if the user chooses to reboot the phone. -->
    <string name="reboot_progress">Riavvio in corso\u2026</string>
    
    <!-- Reboot Confirmation Dialog.  When the user chooses to reboot the device, there will
         be a confirmation dialog.  This is the message. -->
    <string name="reboot_confirm" product="tablet">Il tuo tablet si riavvierà.</string>
    <string name="reboot_confirm" product="default">Il tuo telefono si riavvierà.</string>
    
    <!-- label for item that reboots the phone in phone options dialog -->
    <string name="global_action_current_user">Attuale</string>
    <string name="global_action_reboot">Riavvio</string>
    <string name="global_action_screenshot">Screenshot</string>

    <!-- Silent mode -->
    <string name="silent_mode_priority">Priorità</string>
    <string name="silent_mode_none">Nessuna</string>

    <!-- Privacy Guard -->
    <string name="permlab_changePrivacyGuardState">Attiva o disattiva privacy guard</string>
    <string name="permdesc_changePrivacyGuardState">Permette ad un\'app di decidere se un\'altra app deve essere controllata da privacy guard. Quando un\'app è controllata da privacy guard, non sarà in grado di accedere a dati personali come posizione, contatti, registro chiamate, o messaggi.</string>
    <string name="privacy_guard_notification">Privacy guard è attivo</string>
    <string name="privacy_guard_notification_detail"><xliff:g id="app">%1$s</xliff:g> non sarà in grado di accedere ai dati personali</string>
    <string name="privacy_guard_custom_notification_detail"><xliff:g id="app">%1$s</xliff:g> non sarà in grado di accedere ai permessi specifici</string>

    <!-- Title of a category of application permissions, listed so the user can choose whether they want to allow the application to do this. -->
    <string name="permgrouplab_security">Sicurezza</string>
    <!-- Description of a category of application permissions, listed so the user can choose whether they want to allow the application to do this. -->
    <string name="permgroupdesc_security">Permessi legati alle informazioni sulla sicurezza del dispositivo.</string>

    <!-- [CHAR LIMIT=NONE] Title of an application permission, listed so the user can choose whether they want to allow the application to do this. -->
    <string name="permlab_readPhoneBlacklist">lettura blacklist telefono</string>
    <!-- [CHAR LIMIT=NONE] Description of an application permission, listed so the user can choose whether they want to allow the application to do this. -->
    <string name="permdesc_readPhoneBlacklist">Permetti ad un\'app di leggere le informazioni sui numeri di telefono che sono bloccati per chiamate e/o messaggi.</string>

    <!-- [CHAR LIMIT=NONE] Title of an application permission, listed so the user can choose whether they want to allow the application to do this. -->
    <string name="permlab_changePhoneBlacklist">modifica blacklist telefono</string>
    <!-- [CHAR LIMIT=NONE] Description of an application permission, listed so the user can choose whether they want to allow the application to do this. -->
    <string name="permdesc_changePhoneBlacklist">Permetti ad un\'app di cambiare i numeri di telefono che sono bloccati per chiamate e/o messaggi.</string>

    <!-- Title of an application permission, listed so the user can choose whether they want to allow the application to do this. -->
    <string name="permlab_accessTorchService">accesso al servizio torcia</string>
    <!-- Description of an application permission, listed so the user can choose whether they want to allow the application to do this. -->
    <string name="permdesc_accessTorchService">Permetti ad un\'app di accedere al servizio torcia. Non dovrebbe mai servire per delle normali app.</string>

    <!-- kill app long press back -->
    <string name="app_killed_message">Applicazione chiusa</string>

    <!-- Notification which notifies user flashlight is enabled -->
    <string name="quick_settings_tile_flashlight_not_title">La torcia è accesa</string>
    <string name="quick_settings_tile_flashlight_not_summary">Clicca per spegnere</string>

    <!-- Title of an application permission, listed so the user can choose whether they want the application to do this. -->
    <string name="permlab_setKeyguardWallpaper">imposta sfondo lockscreen</string>
    <!-- Description of an application permission, listed so the user can choose whether they want to allow the application to do this. -->
    <string name="permdesc_setKeyguardWallpaper">Permetti ad un\'app di cambiare lo sfondo della lockscreen.</string>

</resources>
